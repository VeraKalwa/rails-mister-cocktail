<div class="home-banner">
  <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://images.unsplash.com/photo-1558383738-8e44bbf6b093?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1050&q=80)">
    OUR COCKTAILS OF THE DAY
  </div>
</div>
<br>
<br>
<p><%= link_to '+ Add a new cocktail', new_cocktail_path, class: "btn btn-hp" %></p>


<div class="flex-container">
  <% @cocktails.each do |cocktail| %>
  <div class="row justify-content-center">
    <div class="flex-item">
        <%= cl_image_tag 'photo-1550426735-c33c7ce414ff_ibyark', width: 300, height: 300,  crop: :thumb%>
         <div class="card-infos">
          <%= cocktail.name %>
          <%= link_to 'Show', cocktail, class: "btn btn-flat" %>
        </div>
    </div>
  </div>
  <% end %>
</div>


